modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "24-7-Heroku-Bot"

[[workflows.workflow]]
name = "Run With Pairing"
author = 41130535
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js --pairing"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp-Bot-Optimized"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Heroku-Health-Check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Heroku-Bot-Starter"

[[workflows.workflow]]
name = "WhatsApp-Bot-Optimized"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_OPTIONS=\"--expose-gc --max-old-space-size=512\" node index.js --pairing"

[[workflows.workflow]]
name = "Heroku-Health-Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node heroku-health-check.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Heroku-Bot-Starter"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node heroku-bot-starter.js"

[[workflows.workflow]]
name = "Heroku-Bot-Optimized"
author = 41130535
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_OPTIONS=\"--expose-gc --max-old-space-size=512\" node heroku-bot-starter.js"

[[workflows.workflow]]
name = "24-7-Heroku-Bot"
author = 41130535
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_OPTIONS=\"--expose-gc --max-old-space-size=512\" node heroku-bot-starter.js"

[deployment]
run = ["sh", "-c", "NODE_OPTIONS='--expose-gc --max-old-space-size=512' node heroku-bot-starter.js"]
build = ["sh", "-c", "npm install"]

